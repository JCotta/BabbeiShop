<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">   
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no, user-scalable=no">
  <meta name="theme-color" content="{{ settings.color_button }}">
  <meta name="format-detection" content="telephone=no">
  <meta property="og:title" content="{{product.title | strip_html | escape}}">
  <meta property="og:description" content="{{product.description | strip_html | escape}}">
  
  <meta property="og:url" content="{{canonical_url}}">
  <meta property="og:image" content="https:{{product | img_url: '720x720'}}">
  <meta property="product:brand" content="{{ product.vender }}">
  <meta property="product:availability" content="in stock">
  <meta property="product:condition" content="new"
  <meta property="product:price:amount" content="{{ product.price | money_without_currency | stip_html | escape | remove: "," }}">
  <meta property="product:price:currency" content="BRL"
  <meta property="product:retailer_item_id" content="{{product.id}}">
  <meta property="product:item_group_id" content="{{product.type}}">
  
  <script type="application/ld+json">
{
	"@context":"https://schema.org",
	"@type":"{{product.id}}",
	"name":"{{product.title | strip_html | escape }}",
	"description":{{product.description | strip_html | escape}}",
	"url":"{{canonical_url}}",
	"image":"https:{{product | img_url: '720x720'}}",
	"brand":"{{product.type}},
	"offers": [
	 {
		"@type": "Offer",
		"price": "{{ product.price | money_whithout_currency | strip_html | escape | remove: ',' }}",
		"priceCurrency": "BRL"
		"itemCondition": "https//schema.org/NewCondition",
		"availability": "https://schema.org/InStock
 }
],
"additionalProperty": [{
	"@type": "PropertyValue",
	"propertyID: "item_group_id",
	"value": "{{product.type}}"
}]
}
</script>
  {%- if canonical_url != blank  -%}<link rel="canonical" href="{{ canonical_url }}">{%- endif -%}
  <link rel="preconnect" href="//{{shop.domain}}" crossorigin>
  <link rel="preconnect" href="//{{shop.permanent_domain}}" crossorigin>
  <link rel="preconnect" href="//shopify.com" crossorigin>
  {% capture seo_title %}
    {{ page_title }}
    {% if current_tags %}{%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}{% endif %}
    {% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}
    {% unless page_title contains shop.name %}&ndash; {{ shop.name }}{% endunless %}
  {% endcapture %}
  <title>{{ seo_title }}</title>
  {%- if page_description %}<meta name="description" content="{{ page_description | escape }}">
  {%- elsif collection.current_type or collection.current_vendor %}<meta name="description" content="{{ shop.description | default: shop.name | escape }}">{% endif -%}
  {%- if settings.favicon != blank %}<link rel="shortcut icon" type="image/png" href="{{ settings.favicon | img_url: '32x' }}">{% endif -%}
  {%- if settings.favicon_apple != blank %}<link rel="apple-touch-icon-precomposed" type="image/png" sizes="152x152" href="{{ settings.favicon_apple | img_url: '152x' }}">{% endif -%}
  {% comment %}{% include 'social-meta-tags' %} {% endcomment %}
  	
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  {% include 'language-rtl' %}
  {% include 'header-stylesheets' %}
  {% include 'header-scripts' %}  
  <script>
    var theme = { moneyFormat: {{ shop.money_format | json }},moneyFormatWithCurrency: {{ shop.money_with_currency_format | json }}}
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    const type_name = "{{request.page_type}}", t_cartCount = 1,t_shop_currency = "USD", t_moneyFormat = "\u003cspan class='money'\u003e${{amount}}\u003c\/span\u003e", t_cart_url = "\/cart", pr_re_url = "\/recommendations\/products"; 
     $(window).on('load', function () {
          $("html:not('.no-js') .page-load").fadeOut("slow")
     });    
  </script>  
  {{ content_for_header }}
  <!-- Meta Pixel Code -->
  <script>
  !function(f,b,e,v,n,t,s)
  {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
  n.callMethod.apply(n,arguments):n.queue.push(arguments)};
  if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
  n.queue=[];t=b.createElement(e);t.async=!0;
  t.src=v;s=b.getElementsByTagName(e)[0];
  s.parentNode.insertBefore(t,s)}(window, document,'script',
  'https://connect.facebook.net/en_US/fbevents.js');
  fbq('init', '603904294571327');
  fbq('track', 'PageView');
  fbq('track', 'ViewContent');
  </script>
<noscript><img height="1" width="1" style="display:none"
src="https://www.facebook.com/tr?id=603904294571327&ev=PageView&noscript=1"
/></noscript>
<!-- End Meta Pixel Code -->
 
  
</head>
{%- assign admin_sp = request.design_mode -%}
<body id="{{ page_title | handle }}" class="template-{{ template | split: '.' | first }} {% if template contains 'index' %} home {%else%} subpage {% endif %} {{ rtlClasses }}" data-header="{{settings.select_header}}">
{%comment%}
  	
    <div class="page-load laberloading">
      <div class="jloading">	
        <span></span><span></span><span></span><span></span><span></span><span></span><span></span><span></span>
      </div>
    </div>
  	
{%endcomment%}
  {%if settings.show_load_page%}
  <div class="page-load circle-loadding"><span></span></div>
  {%endif%}
  <div class="main">
  {% include 'currencies' %}
    <header id="lheader">
      {% assign import_header = settings.select_header | plus: 0%}
      {% case import_header %}     
      {% when 1 %}
        {% section 'top-header' %}
        {% section 'header1' %}    	
        {% section 'vertical_menu' %}	
      {% when 2 %}
        {%comment%}{% section 'top-header' %}{%endcomment%}
        {% section 'header2' %}      
      {% when 3 %}
        {% section 'top-header' %}
        {% section 'header3' %}
      {% when 4 %}
        {% section 'top-header' %}
        {% section 'header4' %}  
        {% section 'vertical_menu' %}	
      {% when 5 %}
        {% section 'top-header' %}
        {% section 'header5' %} 
        {% section 'vertical_menu' %}
      {% endcase %}
    </header>
  <div class="page-container" id="PageContainer">
    <main id="MainContent">
      {{ content_for_layout }}
    </main>
  </div>  
  <div class="footer">  
        {% assign import_footer= settings.select_footer | plus: 0%}
        {% case import_footer %}     
          {% when 1 %}     
    		  {% section 'footer-top' %}	
              {% section 'footer1' %}
          {% when 2 %}	
              {% section 'footer2' %}
          {% when 3 %}
              {% section 'footer3' %}
          {% when 4 %}
              {% section 'footer4' %}
          {% when 5 %}
              {% section 'footer5' %}
        {% endcase %}
    	{% if settings.show_button_rtl %}
        <a class="switch-rtl-ltr" href="#">
          <span class="rtl-text">{{ 'homepage.onboarding.rtl' | t }}</span>
          <span class="ltr-text">{{ 'homepage.onboarding.ltr' | t }}</span>
        </a>
    	{% endif %}
    </div>
    
    {% liquid 
      assign type_name = request.page_type
      
  		  if  type_name=="product" or type_name == "index" or type_name == 'cart'
          	section 'cross-sell-popup'  
  		  endif 
          if type_name == 'product' and settings.sticky_atc and product.available
            section 'sticky_add_to_cart'
          endif
  		  if type_name != 'blog' and type_name !='article' and type_name !='page'
          	section 'promotion-product-popup'  
  		  endif
           if type_name == "index"               
              section 'promotion-newsletter-popup'
          endif
  		  include 'popups' 
    %}   
  </div>
</body>
</html>
